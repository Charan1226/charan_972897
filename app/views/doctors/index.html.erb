<p id="notice"><%= notice %></p>

<style type="text/css">
  th {
    padding: 5px;
    text-align: left;
    }
    td { 
    padding-left: 5px;
    text-align: left;      
       }
       .plp
       {
           
        margin-left: 2cm;
        padding: 5px;
        text-align: left;
       } 
       .isd
      {
        font-size: 1.5em;
        text-align: center;
        text-decoration: underline;
      }
      .usb
      {
        
        font-size: 1.2em;
        height: 1cm;
      }
      .icici
      {
        height: 1cm;
        font-size: 1.2em;
      }
      .rm
      {
        font-size: 1.2em;
      }


</style>


<div class="plp">
 <h1><u>Doctors</u></h1>

 <p class="isd">
  <strong><b>Branch:</b></strong>
  <%= @hospital.branch %>
 </p>

<table style="width:35%">
  <thead>
    <tr>
      <th class="icici"><b><u>Name</u></b></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
      
        <td class="usb"><%= doctor.name %></td>
        
        
        <td><%= link_to 'Doctor Details', hospital_doctor_path(@hospital.id,doctor.id) %></td>
        
        <td><%= link_to 'Cancel Doctor visit', hospital_doctor_path(@hospital.id,doctor.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
    
  </tbody>
</table>
<br>
<div class="rm">
<%= link_to 'Hospital branch Details' ,hospital_path(@hospital.id) %> |
<%= link_to 'New Doctor', new_hospital_doctor_path(@hospital.id) %>
</div>
</div>
