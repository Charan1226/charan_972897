<p id="notice"><%= notice %></p>

<style type="text/css">

      .ps
      {
        margin-left: 2cm;
        padding: 5px;
        text-align: left;

      }

      .isd
      {
        font-size: 1.5em;
        
      }
      .usb
      {
        margin-top: 2.3cm;
        font-size: 1.2em;
        height: 1cm;
      }
      .icici
      {
        height: 1.3cm;
        font-size: 1.2em;
      }
      .ko
      {
       font-size: 1em;
      }
      .rm
      {
        font-size: 1.2em;
      }
</style>
<div class="ps">
<h1><u>Appointments</u></h1>

<p class="isd">
  <strong><b>Doctor:</b></strong>
  <%= @doctor.name %>
</p>



<table   style="width:35%">
  <thead>
    <tr>
      <th class="icici"><b><u>Patient</u></b></th>
      
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td class="usb"><%= appointment.patient %></td>
        
        
        <td><%= link_to 'Appointment Details', doctor_appointment_path(@doctor.id,appointment.id) %></td>
        
        <td><%= link_to 'Cancel Appointment', doctor_appointment_path(@doctor.id,appointment.id), method: :delete, data: { confirm: 'Are you sure to cancel appointment?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <div class="rm">
   <%= link_to 'Doctor Details',  hospital_doctor_path(@doctor.hospital_id,@doctor.id) %> |
    <%= link_to 'New Appointment',  new_doctor_appointment_path(@doctor.id) %>
    </div>
  
</div>
